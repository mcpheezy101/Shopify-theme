[
  {
    "name": "theme_info",
    "theme_name": "Custom Shopify Theme",
    "theme_version": "1.0.0",
    "theme_author": "Your Name",
    "theme_documentation_url": "",
    "theme_support_url": ""
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "General Colors"
      },
      {
        "type": "color",
        "id": "primary_color",
        "label": "Primary Color",
        "default": "#ff6b6b"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "label": "Secondary Color",
        "default": "#4ecdc4"
      },
      {
        "type": "color",
        "id": "accent_color",
        "label": "Accent Color",
        "default": "#ffd166"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "light_bg_color",
        "label": "Light Background Color",
        "default": "#f9f9f9"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading Font",
        "default": "playfair_display_n7"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body Font",
        "default": "poppins_n4"
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 250,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 150
      },
      {
        "type": "header",
        "content": "Announcement Bar"
      },
      {
        "type": "checkbox",
        "id": "enable_announcement",
        "label": "Enable announcement bar",
        "default": true
      },
      {
        "type": "text",
        "id": "announcement_text",
        "label": "Announcement text",
        "default": "Free Shipping on Orders Over $50 | Shop Now"
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "footer_text",
        "label": "Footer text",
        "default": "Our store offers beautiful party supplies and home decor for every occasion."
      },
      {
        "type": "header",
        "content": "Social Media"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/yourstorename"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourstorename"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://pinterest.com/yourstorename"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/yourstorename"
      }
    ]
  },
  {
    "name": "Product Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_quantity_selector",
        "label": "Show quantity selector",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_sku",
        "label": "Show SKU",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_related_products",
        "label": "Show related products",
        "default": true
      }
    ]
  },
  {
    "name": "Social Sharing",
    "settings": [
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Share on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Share on Pinterest",
        "default": true
      }
    ]
  },
  {
    "name": "Cart Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_cart_notes",
        "label": "Enable order notes",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_cart_recommendations",
        "label": "Show product recommendations",
        "default": true
      }
    ]
  }
]
