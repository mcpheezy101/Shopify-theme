<!-- Instagram Feed Section -->
<section class="instagram-feed">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <p style="margin-bottom: 30px;">{{ section.settings.username }}</p>
    
    <div class="instagram-grid">
      {% for block in section.blocks %}
        <div class="instagram-item">
          <img src="{{ block.settings.image | img_url: 'medium' }}" alt="Instagram Post" class="instagram-image">
          <div class="instagram-overlay">
            <a href="{{ section.settings.instagram_url }}" target="_blank" class="instagram-icon">
              <i class="fa fa-instagram"></i>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.instagram-feed {
  padding: 80px 0;
  text-align: center;
}

.instagram-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 5px;
  margin-top: 50px;
}

.instagram-item {
  position: relative;
  padding-bottom: 100%;
  overflow: hidden;
}

.instagram-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.instagram-item:hover .instagram-image {
  transform: scale(1.1);
}

.instagram-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.instagram-item:hover .instagram-overlay {
  opacity: 1;
}

.instagram-icon {
  color: var(--white);
  font-size: 1.5rem;
}

@media (max-width: 992px) {
  .instagram-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media (max-width: 768px) {
  .instagram-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 576px) {
  .instagram-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
</style>

{% schema %}
{
  "name": "Instagram Feed",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Follow Us on Instagram"
    },
    {
      "type": "text",
      "id": "username",
      "label": "Instagram Username",
      "default": "@YourStoreName"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL",
      "default": "https://instagram.com"
    }
  ],
  "blocks": [
    {
      "type": "instagram_image",
      "name": "Instagram Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "category": "Social",
      "blocks": [
        {
          "type": "instagram_image"
        },
        {
          "type": "instagram_image"
        },
